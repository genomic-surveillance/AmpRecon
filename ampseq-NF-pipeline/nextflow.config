includeConfig './containers.config'

params {
    manifest = ''
    results_dir = "$launchDir/output/"
    reference_fasta = ''
    irods_manifest = ''
    help=""
    start_from="0"
    redo_reference_fasta=null
    // --- intermediate manifests ---------------------------------------------
    step1_2_in_csv=''
    step1_3_in_csv=null
    // ------------------------------------------------------------------------

}


profiles {

  standard {
    singularity {
      enabled = true
    }
  }

  sanger_default {

        docker {
            enabled = false
        }

        singularity {
            enabled = true
            autoMounts = true
            cacheDir = "$PWD"
            runOptions = "--bind /lustre,/nfs,/software"
        }

        process {
            cpus = 1
            memory = "8GB"
            errorStrategy = {task.attempt <= 2 ? "retry" : "terminate"}
            maxRetries = 5

            // This is needed to make resume use the cache for the decode step
            withName: decode {
                cache = "deep"
            }
        }

        executor {
            name = "local"
        }
    }
}

params {
    // sets where to find the containers 
    containers_dir = "$projectDir/containers/"
}

process {
    container = "${params.containers_dir}/base_container.sif"

    withLabel: python_plus_samtools{
        container = "${params.containers_dir}/python_plus_samtools.sif"
    }

    withLabel: irods {
        container = "${params.containers_dir}/irods.sif"
    }
    
    withLabel: genotyping {
        container = "${params.containers_dir}/genotyping.sif"
    }

    withLabel: vcf_parsing {
        container = "${params.containers_dir}/genotype_vcfs_gatk_latest.sif"
    }


    withLabel: grc_tools {
        container = "${params.containers_dir}/grc_tools.sif"
    }

    withLabel: coi {
        container = "${params.containers_dir}/coi.sif"
    }

}

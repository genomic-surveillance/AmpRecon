process {
    withLabel: bambi {
        container = "$projectDir/containers/bambi.sif"
    }

    withLabel: biobambam2 {
        container = "$projectDir/containers/biobambam2.sif"
    }

    withLabel: pythonBox {
        container = "$projectDir/containers/pythonBox.sif"
    }

    withName: bam_to_cram {
        container = "$projectDir/containers/samtools_1.15.sif"
    }

    withLabel: bwa {
        container = "$projectDir/containers/bwa.sif"
    }

    withLabel: staden {
        container = "$projectDir/containers/staden.sif"
    }

    withLabel: python_plus_samtools{
        container = "$projectDir/containers/mergeHeaders.sif"
    }

    withName:bqsr {
        queue = 'long'
        memory = {9.GB * task.attempt}
        container = '/nfs/pathogen/malariaGEN/plasmodium/images/pf7.1.2.sif'
    }

    withName:gatk_haplotype_caller_gatk4 {
        queue = 'long'
        memory = {9.GB * task.attempt}
        container = "/nfs/pathogen/malariaGEN/plasmodium/images/pf7.1.2.sif"
    }

    withName:genotype_vcf_at_given_alleles {
        queue = 'long'
        memory = {9.GB * task.attempt}
        container = '/nfs/pathogen/malariaGEN/plasmodium/images/pf7.1.2.sif'
    }
}


params {
    containers_dir = "/nfs/gsu/team335/development/ampseq-containers/" // sets where to find the containers 
    // PS: the containers_dir default value should be "$projectDir/containers/",
    // not a path to a farm specific filesystem / dir.

}

process {
    withLabel: bambi {
        // container = "/nfs/gsu/team335/ampseq-containers/bambi.sif"
        container = "${params.containers_dir}/bambi.sif"
    }

    withLabel: biobambam2 {
        container = "${params.containers_dir}/biobambam2.sif"
    }

    withLabel: pythonBox {
        container = "${params.containers_dir}/pythonBox.sif"
    }

    withName: bam_to_cram {
        container = "${params.containers_dir}/samtools_1.15.sif"
    }

    withLabel: bwa {
        container = "${params.containers_dir}/bwa.sif"
    }

    withLabel: staden {
        container = "${params.containers_dir}/staden.sif"
    }

    withLabel: python_plus_samtools{
        container = "${params.containers_dir}/mergeHeaders.sif"
    }
    withName: irods_manifest_parser {
        container = "${params.containers_dir}/irods.sif"
    }
    withName: irods_retrieve {
        container = "${params.containers_dir}/irods.sif"
    }
    
    withLabel: genotyping {
        //container = '/nfs/pathogen/malariaGEN/plasmodium/images/pf7.1.2.sif'
        container = "${params.containers_dir}/genotyping.sif"
    }
}


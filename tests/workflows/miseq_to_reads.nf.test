nextflow_workflow {

    name "Test Workflow MISEQ_TO_READS"
    script "workflows/miseq_to_reads.nf"
    workflow "MISEQ_TO_READS"

    test("Should fail when manifest file does not exist") {

        when {
            params {
                manifest_path = "./this_file_does_not_exist.csv"
                channel_data_file = "/nfs/team335/production/resources/pipeline_resources/plasmodium/falciparum/amplicon/datasets/workflow-testing/miseq_to_reads/miseq_to_reads_workflow_data.tsv"
                containers_dir = "/lustre/scratch126/gsu/malariagen/production/resources/pipeline_resources/plasmodium/falciparum/amplicon/ampseq_containers/"
                bcl_dir = "/nfs/team335/production/resources/pipeline_resources/plasmodium/falciparum/amplicon/datasets/workflow-testing/miseq_to_reads/230317"
                run_id = 230317
                ena_study_name = "ERP000190"
                DEBUG_takes_n_bams = 60
                DEBUG_tile_limit = 2
            }
            workflow {
                """
                // Read in workflow channel data file
                channel_data = Channel.fromPath(params.channel_data_file, checkIfExists: true).splitCsv(header: true, sep: '\t')

                // MISEQ_TO_READS workflow input channels
                input[0] = Channel.fromPath(params.manifest_path)
                input[1] = channel_data.map { row -> tuple(row.reference_file, row.panel_name, row.snp_list) }
                """
            }
        }

        then {
            // Ensure workflow fails
            assert workflow.failed
        }
    }

    test("Should run without failures and output should be correct") {

        when {
            params {
                manifest_path = "/nfs/team335/production/resources/pipeline_resources/plasmodium/falciparum/amplicon/datasets/workflow-testing/miseq_to_reads/230317_manifest.tsv"
                channel_data_file = "/nfs/team335/production/resources/pipeline_resources/plasmodium/falciparum/amplicon/datasets/workflow-testing/miseq_to_reads/miseq_to_reads_workflow_data.tsv"
                containers_dir = "/lustre/scratch126/gsu/malariagen/production/resources/pipeline_resources/plasmodium/falciparum/amplicon/ampseq_containers/"
                bcl_dir = "/nfs/team335/production/resources/pipeline_resources/plasmodium/falciparum/amplicon/datasets/workflow-testing/miseq_to_reads/230317"
                run_id = 230317
                ena_study_name = "ERP000190"
                DEBUG_takes_n_bams = 60
                DEBUG_tile_limit = 2

            }
            workflow {
                """
                // Read in workflow channel data file
                channel_data = Channel.fromPath(params.channel_data_file, checkIfExists: true).splitCsv(header: true, sep: '\t')

                // MISEQ_TO_READS workflow input channels
                input[0] = Channel.fromPath(params.manifest_path)
                input[1] = channel_data.map { row -> tuple(row.reference_file, row.panel_name, row.snp_list) }
                """
            }
        }

        then {
            assert workflow.success
            assert snapshot(workflow.out).match()
        }

    }

}
